<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messageCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="8dp"
    android:padding="4dp"
    cardView:cardCornerRadius="16dp"
    cardView:contentPadding="4dp">

    <GridLayout
        android:id="@+id/creditLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2">

        <ImageView
            android:id="@+id/creditImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            cardView:srcCompat="@drawable/ic_adb_black_24dp" />

        <TextView
            android:id="@+id/featureTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="16dp"
            android:padding="8dp"
            android:text="Feature : "
            android:textSize="22sp" />

        <TextView
            android:id="@+id/featureName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:text="Feature Name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/authorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="16dp"
            android:padding="8dp"
            android:text="Author : "
            android:textSize="22sp" />

        <TextView
            android:id="@+id/authorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:text="Author Name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/licenseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="16dp"
            android:padding="8dp"
            android:text="License : "
            android:textSize="22sp" />

        <TextView
            android:id="@+id/licenseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:text="License Name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/usageDescriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="left"
            android:layout_marginLeft="16dp"
            android:padding="8dp"
            android:text="Description : "
            android:textSize="22sp" />

        <TextView
            android:id="@+id/usageDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            android:text="Feature Description"
            android:textSize="18sp" />
    </GridLayout>


</android.support.v7.widget.CardView>
