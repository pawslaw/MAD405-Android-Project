<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.portalcode.mad405_android_project.LoginFragment"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="@color/hypothermia">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Company Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header"
            android:fontFamily="sans-serif"
            android:typeface="sans"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textSize="30sp"
            android:textColor="@color/frostbite"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:padding="1dp"
                android:background="@color/cardview_shadow_start_color">

                <ImageView
                    app:srcCompat="@drawable/ic_account_circle_black_24dp"
                    android:id="@+id/accountImage"
                    android:layout_gravity="center"
                    android:tint="@color/frostbite"
                    android:maxHeight="60dp"
                    android:maxWidth="60dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:background="@color/graphite"
                    android:layout_margin="0dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_account_circle_black_24dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/email"
                    android:layout_height="60dp"
                    android:textColor="@color/frostbite"
                    android:hint="Company Email"
                    android:textColorHint="@color/nevada"
                    android:textSize="18sp"
                    android:textColorLink="@color/icicle"
                    android:background="@color/graphite"
                    android:layout_weight="1"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:paddingLeft="10dp" />

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:padding="1dp"
                android:background="@color/cardview_shadow_start_color">

                <ImageView
                    app:srcCompat="@drawable/ic_vpn_key_black_24dp"
                    android:id="@+id/passwordImage"
                    android:tint="@color/frostbite"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:maxHeight="60dp"
                    android:maxWidth="60dp"
                    android:layout_gravity="center"
                    android:background="@color/graphite"
                    android:layout_margin="0dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_vpn_key_black_24dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/password"
                    android:layout_height="60dp"
                    android:textColor="@color/frostbite"
                    android:hint="Password"
                    android:textColorHint="@color/nevada"
                    android:textSize="18sp"
                    android:textColorLink="@color/icicle"
                    android:background="@color/graphite"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:padding="10dp" />
            </GridLayout>

        </LinearLayout>

        <Button
            android:text="Login"
            android:layout_width="match_parent"
            android:id="@+id/loginButton"
            android:layout_height="60dp"
            android:textSize="18sp" />

        <TextView
            android:text="Remember: Don't share your login credentials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/threat"
            android:textAlignment="center"
            android:textColor="@color/frostbite" />
    </LinearLayout>

</LinearLayout>
